@model Therapim.Models.ReviewRequestModel

@{
    ViewData["Title"] = Model.ReviewId == null ? "新規投稿" : "編集";
    var formAction = ViewData["Title"] == "新規投稿" ? "Create" : "Edit";
    var buttonText = ViewData["Title"] == "新規投稿" ? "投稿する" : "更新する";
}

<div class="review-edit-container">
    <h2>@ViewData["Title"]</h2>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        </div>
    }

    <form asp-action="@formAction" method="post">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label asp-for="ReviewId" class="control-label"></label>
            <input asp-for="ReviewId" class="form-control" readonly />
            <span asp-validation-for="ReviewId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Author" class="control-label"></label>
            <input asp-for="Author" class="form-control" />
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Gender" class="control-label"></label>
            <select asp-for="Gender" class="form-control">
                <option value="Male">Male</option>
                <option value="Female">Female</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Age" class="control-label"></label>
            <input asp-for="Age" class="form-control" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Content" class="control-label"></label>
            <textarea asp-for="Content" class="form-control"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Rating" class="control-label"></label>
            <input asp-for="Rating" class="form-control" type="number" min="1" max="5" />
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CourseId" class="control-label"></label>
            <input asp-for="CourseId" class="form-control" readonly />
            <span asp-validation-for="CourseId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">@buttonText</button>
        </div>
    </form>

    <a class="btn btn-secondary" asp-area="" asp-controller="Review" asp-action="List">レビュー一覧に戻る</a>
</div>
